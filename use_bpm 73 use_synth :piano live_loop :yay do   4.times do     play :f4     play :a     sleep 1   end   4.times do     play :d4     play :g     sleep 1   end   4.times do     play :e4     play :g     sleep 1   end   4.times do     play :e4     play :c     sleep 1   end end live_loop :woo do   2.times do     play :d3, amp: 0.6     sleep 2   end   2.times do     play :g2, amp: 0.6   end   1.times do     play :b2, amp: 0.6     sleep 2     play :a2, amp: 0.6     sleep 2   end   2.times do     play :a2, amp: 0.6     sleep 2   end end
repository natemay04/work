itslit = "C:/Users/nathan_mayeda/Downloads/its_lit.wav"

use_bpm 120

define :piano do
  use_synth :piano
  use_synth_defaults amp: 2
  4.times do
    play :f4
    play :a
    sleep 1
  end
  4.times do
    play :d4
    play :g
    sleep 1
  end
  4.times do
    play :e4
    play :g
    sleep 1
  end
  4.times do
    play :e4
    play :c
    sleep 1
  end
end

live_loop :define do
  piano
end

live_loop :woo do
  n = 300
  1.times do
    
    1.times do
      sample :bd_808, amp: n
      sleep 4
    end
    #stop
    n = 150
    5.times do
      sample :bd_808, amp: n + 135
      sleep 4
    end
    #stop
    4.times do
      sample :bd_808, amp: 825
      sleep 4
    end
  end
  stop
end

sleep 16
live_loop :yolo do
  with_fx :autotuner do
    sample :bd_sone, amp: 2
    sleep 2
  end
end

sleep 8
live_loop :scott do
  1.times do
    sample itslit, amp: 2
    sleep 1
  end
  stop
end



